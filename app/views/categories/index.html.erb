<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "banner.jpg" %>);">
  <div class="container">
    <h1>Cookbook</h1>
    <p>Save your favourite recipes</p>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between align-items-center py-3">
    <h2>List of categories</h2>
    <%= link_to "new category", new_category_path, class: "btn btn-primary btn-font-white" %>
  </div>
  <div class="card-container">
    <% @categories.each do |category| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <h3><%= link_to category.name.capitalize, category_path(category) %></h3>
        <p><%= category.recipes.length %> recipes</p>
        <%= link_to "ðŸ—‘", category_path(category), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "card-category-icon" %>
      </div>
    <% end %>
  </div>

</div>
